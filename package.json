{
  "name": "react-practice",
  "version": "1.0.0",
  "description": "React practice",
  "main": "index.js",
  "scripts": {
    "test": "nyc mocha --require babel-core/register -r ./src/tests/setup/setup.js \"./src/tests/**/*.test.js*\"",
    "test-debug": "mocha --inspect-brk --require babel-core/register -r ./src/tests/setup/setup.js \"./src/tests/**/*.test.js*\"",
    "start": "webpack-dev-server --mode development",
    "build": "webpack",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.test.js",
      "src/tests/setup/setup.js"
    ],
    "extension": [
      ".js"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alisonjonck/react-practice.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alisonjonck/react-practice/issues"
  },
  "homepage": "https://github.com/alisonjonck/react-practice#readme",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "codecov": "^3.0.4",
    "enzyme": "^3.4.4",
    "enzyme-adapter-react-16": "^1.2.0",
    "html-webpack-plugin": "^3.2.0",
    "jsdom": "^12.0.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "sinon": "^6.1.5",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5"
  },
  "dependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  }
}
